<p id="notice"><%= notice %></p>

<div class="product-display">

<div class="row">

<div class="col-xs-5">
<%= image_tag(@product.image_url, width: "100%", height: "100%", class: "product-image")%>

</div>

<div class="col-xs-7 right-productside">


<div class="product-title">
<%= @product.title %>
</div>

<div class="product-description">
<%= @product.description %>
</div>





<div class="product-link">
<%= link_to 'Zum Shop', @product.ref_link, class: "btn btn-primary" %>
</div>
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
</div><!-- row -->
</div>
</div>


<div class: "similar-products" >

<div class="row">

<% @similar_products.each do |similar| %>


  <div class="col-xs-3 col-md-3">
    
      <%= image_tag(similar.image_url, height: "250px", width: "250px", class: "similar_product_images") %>
      <div class="caption">
        <h3><%= similar.title %></h3>
        <p><%= link_to "Zum Shop", similar.ref_link, class: "btn btn-default" %> </p>
        
      </div>
    
  </div>
  

 


<% end %>
</div>
</div><!-- similar products -->





